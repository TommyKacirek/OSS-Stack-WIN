version: '3.8'

services:
  wazuh.indexer:
    image: wazuh/wazuh-indexer:4.7.2
    container_name: wazuh-indexer
    environment:
      - OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
    volumes:
      - wazuh_indexer_data:/var/lib/opensearch/data
    ulimits:
      memlock:
        soft: -1
        hard: -1
      nofile:
        soft: 65536
        hard: 65536

  wazuh.manager:
    image: wazuh/wazuh-manager:4.7.2
    container_name: wazuh-manager
    ports:
      - "1514:1514"
      - "1515:1515"
      - "514:514/udp"
      - "55000:55000"
    volumes:
      - wazuh_manager_data:/var/ossec/data
      - suricata_logs:/var/log/suricata:ro
      - /opt/lab/wazuh/config/ossec.conf:/var/ossec/etc/ossec.conf
    environment:
      - INDEXER_URL=https://wazuh.indexer:9200
      - INDEXER_USER=admin
      - INDEXER_PASSWORD=SecretPassword123!

  wazuh.dashboard:
    image: wazuh/wazuh-dashboard:4.7.2
    container_name: wazuh-dashboard
    ports:
      - "5601:5601"
    environment:
      - WAZUH_MANAGER_URL=https://wazuh.manager
      - INDEXER_URL=https://wazuh.indexer:9200
      - OPENSEARCH_HOSTS=https://wazuh.indexer:9200
      - OPENSEARCH_SSL_VERIFICATIONMODE=none
      - INDEXER_USER=admin
      - INDEXER_PASSWORD=SecretPassword123!

volumes:
  wazuh_indexer_data:
  wazuh_manager_data:
  suricata_logs:
    external: true
